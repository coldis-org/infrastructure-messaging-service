<?xml version="1.0" encoding="UTF-8"?>
<configuration
		xmlns="urn:activemq"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="urn:activemq /schema/artemis-configuration.xsd">
	<core
			xmlns="urn:activemq:core">
		<name>0.0.0.0</name>
		<!-- Persistence enabled. -->
		<persistence-enabled>true</persistence-enabled>
		<!-- Paging, bindings and large messages -->
		<read-whole-page>true</read-whole-page>
		<page-max-concurrent-io>16</page-max-concurrent-io>
		<page-sync-timeout>7300000</page-sync-timeout>
		<paging-directory>data/paging</paging-directory>
		<!-- Journal config. -->
		<large-messages-directory>data/large-messages</large-messages-directory>
		<bindings-directory>data/bindings</bindings-directory>
		<journal-directory>data/journal</journal-directory>
		<journal-type>ASYNCIO</journal-type>
		<journal-datasync>true</journal-datasync>
		<journal-sync-transactional>true</journal-sync-transactional>
		<journal-sync-non-transactional>true</journal-sync-non-transactional>
		<journal-device-block-size>4096</journal-device-block-size>
		<journal-file-size>11M</journal-file-size>
		<journal-min-files>123</journal-min-files>
		<journal-pool-files>123</journal-pool-files>
		<journal-compact-min-files>739</journal-compact-min-files>
		<journal-compact-percentage>93</journal-compact-percentage>
		<journal-max-io>32768</journal-max-io>
		<journal-buffer-timeout>7300000</journal-buffer-timeout>
		<journal-buffer-size>11M</journal-buffer-size>
		<!-- Thread pool. -->
		<thread-pool-max-size>32</thread-pool-max-size>
		<scheduled-thread-pool-max-size>16</scheduled-thread-pool-max-size>
		<!-- Disk usage -->
		<max-disk-usage>90</max-disk-usage>
		<!-- Shutdown -->
		<graceful-shutdown-enabled>true</graceful-shutdown-enabled>
		<graceful-shutdown-timeout>37000</graceful-shutdown-timeout>
		<!-- Disable critical analyzer. -->
		<critical-analyzer>true</critical-analyzer>
		<critical-analyzer-timeout>240000</critical-analyzer-timeout>
		<critical-analyzer-policy>LOG</critical-analyzer-policy>
		<!-- Global max size. -->
		<global-max-size>${GLOBAL_MAX_SIZE}</global-max-size>	
		<!-- Acceptors. -->
		<acceptors>
			<acceptor name="artemis">tcp://0.0.0.0:61616?protocols=CORE;useEpoll=${CONN_USE_EPOLL};directDeliver=${CONN_DIRECT_DELIVER};tcpNoDelay=${CONN_TCP_NO_DELAY};batchDelay=${CONN_BATCH_DELAY};handshake-timeout=${CONN_HANDSHAKE_TIMEOUT};tcpSendBufferSize=${CONN_TCP_BUFFER_SIZE};tcpReceiveBufferSize=${CONN_TCP_BUFFER_SIZE};minLargeMessageSize=${CONN_LARGE_MESSAGE_SIZE};compressLargeMessages=true;remotingThreads=${CONN_REMOTING_THREADS};connectionsAllowed=${CONN_CONNECTIONS_ALLOWED}</acceptor>
			<acceptor name="stomp">tcp://0.0.0.0:61613?protocols=STOMP;useEpoll=${CONN_USE_EPOLL};directDeliver=${CONN_DIRECT_DELIVER};tcpNoDelay=${CONN_TCP_NO_DELAY};batchDelay=${CONN_BATCH_DELAY};handshake-timeout=${CONN_HANDSHAKE_TIMEOUT};tcpSendBufferSize=${CONN_TCP_BUFFER_SIZE};tcpReceiveBufferSize=${CONN_TCP_BUFFER_SIZE};minLargeMessageSize=${CONN_LARGE_MESSAGE_SIZE};compressLargeMessages=true;remotingThreads=${CONN_REMOTING_THREADS};connectionsAllowed=${CONN_CONNECTIONS_ALLOWED}</acceptor>
		</acceptors>
		<!-- Transaction -->
		<transaction-timeout>93000</transaction-timeout>
		<!-- Scans. -->
		<disk-scan-period>11000</disk-scan-period>
		<message-expiry-scan-period>-1</message-expiry-scan-period>
		<address-queue-scan-period>1300000</address-queue-scan-period>
		<!-- Security. -->
		<security-settings>
			<security-setting match="#">
				<permission type="createNonDurableQueue"
					roles="technology-messaging-service-admin" />
				<permission type="deleteNonDurableQueue"
					roles="technology-messaging-service-admin" />
				<permission type="createDurableQueue"
					roles="technology-messaging-service-admin" />
				<permission type="deleteDurableQueue"
					roles="technology-messaging-service-admin" />
				<permission type="createAddress"
					roles="technology-messaging-service-admin" />
				<permission type="deleteAddress"
					roles="technology-messaging-service-admin" />
				<permission type="consume"
					roles="technology-messaging-service-admin" />
				<permission type="browse"
					roles="technology-messaging-service-admin" />
				<permission type="send"
					roles="technology-messaging-service-admin" />
				<permission type="manage"
					roles="technology-messaging-service-admin" />
			</security-setting>
		</security-settings>
		<!-- Default queues. -->
		<addresses>
			<address name="DLQ">
				<anycast>
					<queue name="DLQ" />
				</anycast>
			</address>
			<address name="ExpiryQueue">
				<anycast>
					<queue name="ExpiryQueue" />
				</anycast>
			</address>
		</addresses>
		<!-- Address settings -->
		<address-settings>
			<address-setting match="activemq.management#">
				<dead-letter-address>DLQ</dead-letter-address>
				<expiry-address>ExpiryQueue</expiry-address>
				<message-counter-history-day-limit>3</message-counter-history-day-limit>
				<auto-create-queues>true</auto-create-queues>
				<auto-delete-queues>false</auto-delete-queues>
				<auto-create-addresses>true</auto-create-addresses>
				<auto-delete-addresses>false</auto-delete-addresses>
				<page-size-bytes>11M</page-size-bytes>
				<max-size-bytes>${QUEUE_MAX_SIZE}</max-size-bytes>
				<max-size-messages>-1</max-size-messages>
				<management-browse-page-size>3000</management-browse-page-size>
				<address-full-policy>PAGE</address-full-policy>
				<redelivery-delay>3000</redelivery-delay>
				<redelivery-delay-multiplier>5.0</redelivery-delay-multiplier>
				<max-redelivery-delay>1800000</max-redelivery-delay>
				<max-delivery-attempts>13</max-delivery-attempts>
			</address-setting>
			<address-setting match="#">
				<dead-letter-address>DLQ</dead-letter-address>
				<expiry-address>ExpiryQueue</expiry-address>
				<message-counter-history-day-limit>3</message-counter-history-day-limit>
				<auto-create-queues>true</auto-create-queues>
				<auto-delete-queues>false</auto-delete-queues>
				<auto-create-addresses>true</auto-create-addresses>
				<auto-delete-addresses>false</auto-delete-addresses>
				<page-size-bytes>11M</page-size-bytes>
				<max-size-bytes>${QUEUE_MAX_SIZE}</max-size-bytes>
				<max-size-messages>111000</max-size-messages>
				<management-browse-page-size>3000</management-browse-page-size>
				<address-full-policy>PAGE</address-full-policy>
				<default-last-value-key>_AMQ_LVQ_NAME</default-last-value-key>
				<redelivery-delay>3000</redelivery-delay>
				<redelivery-delay-multiplier>5.0</redelivery-delay-multiplier>
				<max-redelivery-delay>1800000</max-redelivery-delay>
				<max-delivery-attempts>13</max-delivery-attempts>
			</address-setting>
		</address-settings>
	</core>
</configuration>
